rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - each user can only access their own data
    match /users/{userId} {
      // Allow read/write only to the owner
      allow read, write: if isOwner(userId);
      
      // User's vehicles subcollection
      match /vehicles/{vehicleId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's drivers subcollection
      match /drivers/{driverId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Global vehicles collection
    match /vehicles/{vehicleId} {
      // Allow read for anyone (needed for driver login and tracking)
      allow read: if true;
      
      // Allow create if authenticated and setting self as owner
      allow create: if isAuthenticated() && 
        request.resource.data.owner == request.auth.uid;
      
      // Allow update if:
      // 1. User is authenticated and is the owner (full update)
      // 2. OR any authenticated user updating only location fields (for drivers)
      allow update: if (isAuthenticated() && 
        resource.data.owner == request.auth.uid) ||
        (isAuthenticated() && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['latitude', 'longitude', 'location', 'timestamp']));
      
      // Allow delete only by owner
      allow delete: if isAuthenticated() && 
        resource.data.owner == request.auth.uid;
    }
    
    // Root-level drivers collection
    match /drivers/{driverId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();
      
      // Allow create/update only by the vehicle owner
      allow create, update: if isAuthenticated() && 
        request.resource.data.owner == request.auth.uid;
      
      // Allow delete only by the vehicle owner
      allow delete: if isAuthenticated() && 
        resource.data.owner == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
