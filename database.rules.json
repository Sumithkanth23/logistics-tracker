{
  "rules": {
    "vehicles": {
      "$vehicleId": {
        ".read": "root.child('users').child(auth.uid).child('vehicles').child($vehicleId).exists()",
        ".write": "auth != null"
      }
    },
    "busLocation": {
      "$vehicleId": {
        ".read": "root.child('users').child(auth.uid).child('vehicles').child($vehicleId).exists()",
        ".write": "auth != null"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
